{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "buildCommand": "npm run build --force", "outputDirectory": "frontend/build" }
      },
      {
        "src": "larko_web/asgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "500mb" }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/server.py" },
      { "src": "/(.*)", "dest": "frontend/build/$1" }
    ]
  }
  